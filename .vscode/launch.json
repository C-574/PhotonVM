{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/pvm.exe",
            "args": [
                "-r=./../examples/SimpleAdd.pho",
                "-v=2"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bin",
            "environment": [],
            "externalConsole": false
        },
        {
            "name": "C++ Attach (Windows)",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command.pickProcess}"
        }
    ]
}